{
  "name": "pad",
  "version": "1.0.0",
  "description": "Programarea aplica»õiilor distribuite",
    "scripts": {
    "build": "tsc",
    "tsc": "tsc -p tsconfig-check.json",
    "prettier:write": "prettier --config .prettierrc --write \"**/*.*\"",
    "dev:gateway": "nodemon --config nodemon.json services/gateway/app.ts",
    "dev:users": "nodemon --config nodemon.json services/users/app.ts",
    "dev:orders": "nodemon --config nodemon.json services/orders/app.ts",
    "dev": "concurrently \"npm run dev:users\" \"npm run dev:orders\" \"npm run dev:gateway\"",
    "start:gateway": "node ./build/gateway/app.js",
    "start:users": "node ./build/users/app.js",
    "start:orders": "node ./build/orders/app.js",
    "start": "concurrently \"npm run start:users\" \"npm run start:orders\" \"npm run start:gateway\""
  },
