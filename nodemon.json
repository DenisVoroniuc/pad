{
  "restartable": "rs",
  "ignore": [".git", "node_modules/", "dist/", "coverage/"],
  "watch": ["services/"],
  "execMap": {
    "ts": "node -r ts-node/register"
  },
  "env": {
    "NODE_ENV": "development",
    "APP_USERS_HOST": "localhost",
    "APP_USERS_PORT": "3002",
    "APP_ORDERS_HOST": "localhost",
    "APP_ORDERS_PORT": "3003"
  },
  "ext": "js,json,ts"
}
